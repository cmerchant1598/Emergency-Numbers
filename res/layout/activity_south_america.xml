<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_south_america"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a611solutions.emergencynumbers.SouthAmericaActivity"
    android:background="@color/colorAccent">

    <TextView
        android:text="SOUTH AMERICA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/southAmericaTitle"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/southAmericaTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/southAmericaHeader">

        <TextView
            android:text="Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/southAmericaHeader"
        android:layout_centerHorizontal="true"
        android:id="@+id/list"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:background="@android:color/background_light"/>
</RelativeLayout>
