<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_africa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a611solutions.emergencynumbers.AfricaActivity"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:text="AFRICA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/africaTitle"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="normal|bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/africaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/afHeader">

        <TextView
            android:text="Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryLabel"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:text="Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberLabel"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/afHeader"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:id="@+id/list"
        android:background="@android:color/background_light"/>
</RelativeLayout>
